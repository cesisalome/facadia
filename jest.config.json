{
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
        "<rootDir>/js/__tests__/setup.js"
    ],
    "testMatch": [
        "<rootDir>/js/__tests__/**/*.test.js"
    ],
    "moduleFileExtensions": [
        "js",
        "json"
    ],
    "transform": {
        "^.+\\.js$": "babel-jest"
    },
    "verbose": true,
    "collectCoverageFrom": [
        "js/**/*.js",
        "!js/**/*.test.js",
        "!js/__tests__/**",
        "!js/samples/**"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 15,
            "functions": 30,
            "lines": 45,
            "statements": 45
        }
    },
    "coverageReporters": [
        "text",
        "text-summary",
        "html",
        "lcov"
    ]
}